<Window x:Class="PasswordGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordGenerator"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Label Content="Введите длину пароля" HorizontalAlignment="Left" Margin="173,76,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="PasswordLengthReciever" Text="{Binding Path=PasswordLength}"   HorizontalAlignment="Left" Height="22" Margin="188,120,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="118"/>
        <Button x:Name="GenerateButton" Click="OnGenerateButtonClick" Content="Generate" HorizontalAlignment="Left" Margin="188,186,0,0" VerticalAlignment="Top" Width="123"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="115,227,0,0" TextWrapping="Wrap" Text="{Binding Password}" VerticalAlignment="Top" Width="239"/>
    </Grid>
</Window>
